{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "startwp",
            "problemMatcher": [
                "$ts-webpack-watch"
            ],
            "group": "build",
            "isBackground": true
        },
        {
            "type": "npm",
            "script": "build",
            "group": "build",
            "isBackground": true
        },
        {
            "type": "npm",
            "script": "buildwp",
            "problemMatcher": [
                "$ts-webpack"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}